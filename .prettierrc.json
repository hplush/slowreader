{
  "plugins": ["prettier-plugin-svelte"],
  "arrowParens": "avoid",
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ]
}

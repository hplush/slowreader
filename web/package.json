{
  "name": "@slowreader/web",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^24.6.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "test": "pnpm run /^test:/",
    "build": "pnpm run /^build:/ && mv ./storybook-static ./dist/ui",
    "start": "vite --host 0.0.0.0",
    "visual": "storybook dev -p 6006 --no-open --host 0.0.0.0",
    "production": "node --run build && ./scripts/run-image.sh",
    "size": "node --run build:web && size-limit",
    "test:unit": "pnpm bnt",
    "test:names": "node ./scripts/check-names.ts",
    "test:css": "stylelint **/*.css **/*.svelte",
    "test:build": "node --run build && size-limit && node ./scripts/check-css-props.ts",
    "build:routes": "tsx ./scripts/export-routes.ts",
    "build:visual": "NODE_ENV=test storybook build",
    "build:web": "vite build && node scripts/generate-csp.ts",
    "format:stylelint": "stylelint --fix **/*.{css,svelte}",
    "clean:build": "rm -rf dist"
  },
  "dependencies": {
    "@fontsource-variable/noto-sans": "5.2.7",
    "@fontsource-variable/noto-sans-mono": "5.2.7",
    "@fontsource-variable/noto-serif": "5.2.7",
    "@fontsource/inika": "5.2.6",
    "@fontsource/playpen-sans": "5.2.7",
    "@logux/client": "github:logux/client#next",
    "@logux/core": "0.9.0",
    "@mdi/js": "7.4.47",
    "@nanostores/i18n": "1.2.2",
    "@nanostores/persistent": "1.1.0",
    "@nanostores/router": "1.0.0",
    "@slowreader/core": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "6.1.3",
    "autoprefixer": "10.4.21",
    "nanostores": "1.0.1",
    "postcss": "8.5.6",
    "postcss-load-config": "6.0.1",
    "postcss-mixins": "12.1.2",
    "rollup": "4.48.0",
    "svelte": "5.38.3",
    "tsx": "4.20.5",
    "vite": "7.1.3"
  },
  "devDependencies": {
    "@logux/stylelint-config": "0.21.0",
    "@size-limit/file": "11.2.0",
    "@storybook/addon-svelte-csf": "5.0.8",
    "@storybook/addon-themes": "9.1.3",
    "@storybook/svelte": "9.1.3",
    "@storybook/svelte-vite": "9.1.3",
    "@stylistic/stylelint-config": "3.0.1",
    "@stylistic/stylelint-plugin": "4.0.0",
    "better-node-test": "0.7.2",
    "browserslist": "4.25.3",
    "eslint": "9.34.0",
    "keyux": "0.11.3",
    "postcss-html": "1.8.0",
    "postcss-nesting": "13.0.2",
    "postcss-selector-parser": "7.1.0",
    "size-limit": "11.2.0",
    "storybook": "9.1.3",
    "stylelint": "16.23.1",
    "stylelint-use-logical": "2.1.2"
  }
}

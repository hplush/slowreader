{
  "name": "@slowreader/proxy",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^24.11.0",
    "pnpm": "^10.0.0"
  },
  "exports": {
    ".": "./index.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "start": "node --watch server.ts",
    "test": "FORCE_COLOR=1 pnpm run /^test:/",
    "build": "node --run clean:build && pnpm -F proxy --prod deploy dist",
    "production": "node --run build && ./scripts/run-image.sh",
    "test:proxy-coverage": "bnt --coverage 100",
    "clean:build": "rm -rf dist/"
  },
  "devDependencies": {
    "better-node-test": "0.8.3",
    "eslint": "9.39.1"
  }
}

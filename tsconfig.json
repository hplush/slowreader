{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2022",
    "module": "NodeNext",
    "strict": true,
    "noEmit": true,
    "types": ["chrome"]
  },
  "include": ["**/*.ts", "web/**/*.svelte", "web/.storybook/*.ts"],
  "exclude": ["*/dist"]
}

{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2022",
    "module": "NodeNext",
    "strict": true,
    "noEmit": true,
    "types": ["chrome", "node"]
  },
  "include": ["**/*.ts", "**/*.cts", "web/**/*.svelte", "web/.storybook/*.ts"],
  "exclude": ["*/dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true
    }
  }
}

{
  "name": "slowreader",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.6.0",
    "pnpm": "^9.0.0"
  },
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "test": "FORCE_COLOR=1 pnpm run -r --include-workspace-root /^test:/",
    "start": "FORCE_COLOR=1 pnpm run -r start",
    "format": "pnpm run -r --include-workspace-root /^format:/",
    "clean": "pnpm run -r --include-workspace-root /^clean:/",
    "build": "pnpm run -r build",
    "update-env": "node --experimental-strip-types ./scripts/update-env.ts",
    "format:prettier": "prettier -w **/*.{js,ts,html,md,cjs,json} *.{js,json,md}",
    "test:js": "eslint .",
    "test:types": "svelte-check",
    "test:audit": "pnpm audit --prod",
    "test:focused": "node --experimental-strip-types ./scripts/check-focused-tests.ts",
    "test:messages": "node --experimental-strip-types ./scripts/check-messages.ts",
    "test:versions": "node --experimental-strip-types ./scripts/check-versions.ts",
    "test:markdown": "remark . --frail",
    "test:format": "prettier --check **/*.{js,ts,html,md,cjs,json} *.{js,json,md}",
    "check-opml": "node --experimental-strip-types loader-tests/check-opml.ts",
    "test-loaders": "node --experimental-strip-types loader-tests/test-loaders.ts loader-tests/feeds.yml",
    "prepare": "husky"
  },
  "workspaces": [
    "api",
    "core",
    "server",
    "web",
    "loader-tests",
    "proxy"
  ],
  "devDependencies": {
    "@logux/eslint-config": "53.3.0",
    "@types/node": "22.1.0",
    "@types/ws": "8.5.12",
    "better-node-test": "0.6.0",
    "eslint": "9.8.0",
    "eslint-plugin-svelte": "^2.43.0",
    "husky": "^9.1.4",
    "nano-staged": "0.8.0",
    "postcss-html": "1.7.0",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.6",
    "remark-cli": "^12.0.1",
    "remark-lint-check-toc": "^1.0.0",
    "remark-lint-code-block-split-list": "^1.0.0",
    "remark-lint-fenced-code-flag": "^4.0.0",
    "remark-lint-first-heading-level": "^4.0.0",
    "remark-lint-heading-capitalization": "^1.2.0",
    "remark-lint-heading-increment": "^4.0.0",
    "remark-lint-match-punctuation": "^0.2.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-lint-no-shell-dollars": "^4.0.0",
    "remark-lint-smarty-pants-typography": "^1.1.0",
    "remark-validate-links": "^13.0.1",
    "stylelint": "16.8.1",
    "svelte": "4.2.18",
    "svelte-check": "3.8.5",
    "svgo": "3.3.2",
    "typescript": "5.5.4"
  }
}

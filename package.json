{
  "name": "slowreader",
  "private": true,
  "type": "module",
  "engines": {
    "node": "~20.7.0"
  },
  "scripts": {
    "clean": "rm -rf api/coverage core/coverage web/coverage web/dist",
    "test:js": "eslint .",
    "test:css": "stylelint **/*.css **/*.svelte",
    "test:types": "tsc --noEmit",
    "test:checks": "./scripts/tsm-every scripts check-*.ts",
    "test:audit": "pnpm audit --prod",
    "test": "FORCE_COLOR=1 pnpm run -r --include-workspace-root /^test:/",
    "start": "FORCE_COLOR=1 pnpm run -r start"
  },
  "workspaces": [
    "api",
    "core",
    "server",
    "web"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^52.0.1",
    "@logux/stylelint-config": "^0.16.0",
    "@types/node": "^20.7.0",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-node-import": "^1.0.4",
    "eslint-plugin-perfectionist": "^2.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-svelte": "^2.33.2",
    "eslint-plugin-uvu": "^0.1.1",
    "nano-staged": "^0.8.0",
    "picocolors": "^1.0.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^15.10.3",
    "svelte": "^4.2.1",
    "tsm": "^2.3.0",
    "typescript": "~5.2.2"
  },
  "pnpm": {
    "overrides": {
      "semver@<7.5.2": ">=7.5.2"
    }
  }
}
